#!/bin/bash -e

echo "---> RUNning conatiner... $mode"

case $mode in
    "usage")
        echo "Usage!"
        /usr/libexec/s2i/usage
        exit 0
        ;;
    "micro")
        exec /app/druid/bin/start-micro-quickstart
        ;;
    "none")
        exec /bin/bash
        ;;
    *)
        echo "Running bash"
        exec /bin/bash
        ;;
esac