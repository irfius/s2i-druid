#!/bin/bash -e

echo "---> RUNning conatiner... $cluster"

case $cluster in
    "usage")
        echo "Usage!"
        /usr/libexec/s2i/usage
        exit 0
        ;;
    "coordinator-overlord")
        echo "Running coordinator-overlord..."
        exec /app/druid/bin/start-coordinator-overlord-large
        ;;
    "broker")
        echo "Running broker..."
        exec /app/druid/bin/start-broker-large
        ;;
    "historical")
        echo "Running historical..."
        exec /app/druid/bin/start-historical-large
        ;;
    "middlemanager")
        echo "Running middlemanager"
        exec /app/druid/bin/start-middleManager-large
        ;;
    "router")
        echo "Running router..."
        exec /app/druid/bin/start-router-large
        ;;
    *)
        echo "Running bash..."
        exec /bin/bash
        ;;
esac